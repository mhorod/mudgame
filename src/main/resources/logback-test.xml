<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <!--            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} -%kvp- %msg%n</pattern>-->
            <pattern>%d{HH:mm:ss.SSS} [%.+4thread] %-5level %logger{36} -%kvp- %msg%n</pattern>
        </encoder>
    </appender>

    <root level="DEBUG">
        <appender-ref ref="STDOUT"/>
    </root>

    <!--    <logger name="io" level="OFF"/>-->
    <!--    <logger name="core" level="OFF"/>-->
    <!--    <logger name="middleware" level="OFF"/>-->

    <logger name="middleware.communication.SocketReceiver" level="INFO"/>
    <logger name="middleware.communication.SocketSender" level="INFO"/>
</configuration>
